<h1>Books search for "test"</h1>

<table class="table table-hover table-inverse">
  <% if @range == "User" %>
  <thead>
   <tr>
    <th colspan="1"></th>
    <th>name</th>
    <th>introduction</th>
   </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
     <tr>
       <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
       <td><%= user.name %></td>
       <td><%= user.introduction %></td>
     </tr>
    <% end %>
  </tbody>
  <% else %>
  <thead>
   <tr>
    <th colspan="1"></th>
    <th>Title</th>
    <th>Opinion</th>
   </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
     <tr>
       <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
     </tr>
    <% end %>
  </tbody>
  <% end %>
  </table>